@model CreateYeniBinaDto
@{
    ViewData["Title"] = "Yeni Bina Ekleme Sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-..." crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>
<style>
    .custom-form-container {
        background-color: #e6e0f8; /* Açık mor renk */
        padding: 20px; /* Formun çevresine dolgu */
        border-radius: 8px; /* Kenarları yuvarlatmak için */
        max-width: 1000px; /* Daha geniş bir maksimum genişlik */
        width: 90%; /* Tam ekran genişliğinin %90'ı */
        margin: auto;
    }
</style>
<form id="yeniBinaForm" method="post" class="custom-form-container">
    <table class="table table-bordered">
        <tbody>
            <tr>
                <td>
                    <label for="TcKimlikNo" class="form-label">TC Kimlik No</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-id-card"></i></span>
                        </div>
                        <input type="text" class="form-control" id="TcKimlikNo" name="TcKimlikNo"
                               placeholder="11 Haneli TC Kimlik No"
                               maxlength="11" minlength="11"
                               oninput="this.value = this.value.replace(/[^0-9]/g, '').slice(0, 11);">
                    </div>
                </td>
                <td>
                    <label for="Telefon" class="form-label">Telefon</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-phone"></i></span>
                        </div>
                        <input type="text" class="form-control" id="Telefon" name="Telefon"
                               placeholder="Telefon Numaranız"
                               maxlength="11" oninput="this.value = this.value.replace(/[^0-9]/g, '').slice(0, 11);">
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="AdSoyad" class="form-label">Adı Soyadı</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                        </div>
                        <input type="text" class="form-control" id="AdSoyad" name="AdSoyad" placeholder="Ad ve Soyadını Girin" maxlength="100" oninput="this.value = this.value.toLocaleUpperCase('tr-TR');">
                    </div>
                </td>
                <td>
                    <label for="Mahalle" class="form-label">Mahalle</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
                        </div>
                        <select id="Mahalle" name="Mahalle" class="form-control" required>
                            <option value="">Mahalle Seçiniz...</option>
                            @foreach (var mahalle in ViewBag.Mahalleler)
                            {
                                <option value="@mahalle">@mahalle</option>
                            }
                        </select>
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="CaddeSokak" class="form-label">Cadde/Sokak</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-road"></i></span>
                        </div>
                        <input type="text" class="form-control" id="CaddeSokak" name="CaddeSokak"
                               placeholder="Cadde veya Sokak Adı"
                               maxlength="100"
                               oninput="this.value = this.value.toLocaleUpperCase('tr-TR');">

                    </div>
                </td>
                <td>
                    <label for="DisKapi" class="form-label">Dış Kapı No</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-door-open"></i></span>
                        </div>
                        <input type="text" class="form-control" id="DisKapi" name="DisKapi"
                               placeholder="Dış Kapı No" maxlength="4"
                               oninput="this.value = this.value.toLocaleUpperCase('tr-TR');">
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="Ada" class="form-label">Ada</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-map"></i></span>
                        </div>
                        <input type="text" class="form-control" id="Ada" name="Ada"
                               placeholder="Ada No" maxlength="6"
                               oninput="this.value = this.value.replace(/[^0-9]/g, '').slice(0, 6);">
                    </div>
                </td>
                <td>
                    <label for="Parsel" class="form-label">Parsel</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-map"></i></span>
                        </div>
                        <input type="text" class="form-control" id="Parsel" name="Parsel"
                               placeholder="Parsel No" maxlength="6"
                               oninput="this.value = this.value.replace(/[^0-9]/g, '').slice(0, 6);">
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="BlokAdi" class="form-label">Blok Adı</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-building"></i></span>
                        </div>
                        <input type="text" class="form-control" id="BlokAdi" name="BlokAdi"
                               placeholder="Blok Adı" maxlength="50"
                               value="@(!string.IsNullOrEmpty(Model?.BlokAdi) ? Model.BlokAdi : string.Empty)"
                               oninput="this.value = this.value.slice(0, 50).toLocaleUpperCase('tr-TR');">
                    </div>
                </td>

            </tr>
            <tr>
                <td colspan="2">
                    <input type="hidden" id="Tarih" name="Tarih" />
                </td>
            </tr>
            <tr>
                <td colspan="2" class="text-center">
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </td>
            </tr>
        </tbody>
    </table>
</form>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const today = new Date();

        // Yerel saat dilimine göre tarih ve saat formatı
        const offset = today.getTimezoneOffset() * 60000; // dakika cinsinden offset'i milisaniyeye çevir
        const localTime = new Date(today.getTime() - offset);

        // Formatlayarak tarih ve saati al
        const formattedDate = localTime.toISOString().substring(0, 16);
        document.getElementById('Tarih').value = formattedDate;
    });
</script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const form = document.getElementById('yeniBinaForm');

        form.addEventListener('input', function (event) {
            const input = event.target;

            // Yalnızca metin ve telefon alanlarında dönüşüm yap
            if (input.type === 'text' || input.type === 'tel') {
                input.value = input.value.toLocaleUpperCase('tr-TR'); // Türkçe büyük harf dönüştürme
            }
        });

        form.addEventListener('submit', function (event) {
            // Submit sırasında bir daha kontrol etmek için
            const inputs = form.querySelectorAll('input');
            inputs.forEach(function (input) {
                if (input.type === 'text' || input.type === 'tel') {
                    input.value = input.value.toLocaleUpperCase('tr-TR');
                }
            });
        });
    });
</script>